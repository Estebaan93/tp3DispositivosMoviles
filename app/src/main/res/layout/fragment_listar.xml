<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <data>
    <!-- Importamos View para poder usar View.VISIBLE y View.GONE -->
    <import type="android.view.View" />

    <!-- Importamos el enum EstadoLista del ViewModel -->
    <import type="com.example.tp3dispositivosmoviles.ui.producto.ListarProductoViewModel.EstadoLista" />

    <variable
        name="vm"
        type="com.example.tp3dispositivosmoviles.ui.producto.ListarProductoViewModel" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".ui.producto.ListarFragment">

    <!-- RecyclerView para mostrar los productos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idLista"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_producto" />

    <!-- si la lista est vacia -->
    <TextView
        android:id="@+id/TvVacia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La lista esta vacia"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility='@{vm.estadoLista == EstadoLista.VACIA ? View.VISIBLE : View.GONE}'
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>